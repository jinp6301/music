<h2><%= @band.name %></h2>

<h3>Albums</h3>
<ul>
  <% @band.albums.each do |album| %>
    <li><%= link_to album.name, album_url(album) %></li>
    <ul>
      <% album.tracks.each do |track| %>
      <li><%= link_to track.name, track_url(track)%></li>
      <% end %>
    </ul>
  <% end %>
</ul>

<%= edit_link @band.class.name.downcase %>
<br>
<%= destroy_button @band %>